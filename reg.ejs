<div class="login-container">
    <div class="login" id="reg_page">

        <form class="form-horizontal" method="post">
            <fieldset style="border-style: none;">
                <!--<div class="fieldset-control">-->
                    <h1 class="welcome">新用户注册</h1>
                <!--</div>-->
                <div class="control-group">
                    <label for="account" class="control-label">用户名:</label>
                    <input id="account" type="text" class="form-control" placeholder="同户名可以是字母数字下划线"
                           onblur="compareData()" required/><span id="usermessage"></span>
                </div>

                <div class="control-group">
                    <label for="password" class="control-label">设置密码:</label>
                    <input id="password" type="password" class="form-control" placeholder="请输入6-18位包括下划线的单词字符"
                           onblur="comparePData()" required/><span id="passwordmesg"></span>
                </div>

                <div class="control-group">
                    <label for="password-repeat" class="control-label">再次输入:</label>
                    <input id="password-repeat" type="password" class="form-control" placeholder="位包括下划线的单词字符"
                           onblur="comparePRDATA()" onblur="comparePRData()"/><span id="password-repeat-mesg"></span>
                </div>
                <div class="control-group">
                    <label for="email" class="control-label">邮箱:</label>
                    <input id="email" type="email" class="form-control" placeholder="Username@example.com"
                           onblur="compareEData()"/><span id="emailmessage"></span>
                </div>
                <div class="control-group">
                    <label for="telephone" class="control-label">手机号:</label>
                    <input id="telephone" type="tel" class="form-control" placeholder="Telephone"
                           onblur="compareTData()"/><span id="telephonemesg"></span>
                </div>
                <div class="fieldset-control">
                    <div class="submit-login">
                        <button type="submit" class="btn btn-default">立即注册</button>
                    </div>
                </div>
            </fieldset>
        </form>
